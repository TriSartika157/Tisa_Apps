<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="#FFFFFF"
        android:gravity="end"
        android:padding="16dp"
        android:text="0"
        android:textSize="32sp" />

    <!-- Row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn7"
            style="@style/CalcBtn"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            style="@style/CalcBtn"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            style="@style/CalcBtn"
            android:text="9" />

        <Button
            android:id="@+id/btnDivide"
            style="@style/CalcBtn"
            android:text="÷" />
    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn4"
            style="@style/CalcBtn"
            android:text="4" />

        <Button
            android:id="@+id/btn5"
            style="@style/CalcBtn"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            style="@style/CalcBtn"
            android:text="6" />

        <Button
            android:id="@+id/btnMultiply"
            style="@style/CalcBtn"
            android:text="×" />
    </LinearLayout>

    <!-- Row 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            style="@style/CalcBtn"
            android:text="1" />

        <Button
            android:id="@+id/btn2"
            style="@style/CalcBtn"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            style="@style/CalcBtn"
            android:text="3" />

        <Button
            android:id="@+id/btnMinus"
            style="@style/CalcBtn"
            android:text="-" />
    </LinearLayout>

    <!-- Row 4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn0"
            style="@style/CalcBtn"
            android:text="0" />

        <Button
            android:id="@+id/btnDot"
            style="@style/CalcBtn"
            android:text="." />

        <Button
            android:id="@+id/btnEqual"
            style="@style/CalcBtn"
            android:text="=" />

        <Button
            android:id="@+id/btnPlus"
            style="@style/CalcBtn"
            android:text="+" />
    </LinearLayout>

    <!-- Extra -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSquare"
            style="@style/CalcBtn"
            android:text="x²" />

        <Button
            android:id="@+id/btnRoot"
            style="@style/CalcBtn"
            android:text="√" />

        <Button
            android:id="@+id/btnClear"
            style="@style/CalcBtn"
            android:text="C" />
    </LinearLayout>

</LinearLayout>
